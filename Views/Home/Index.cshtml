@{
}

<h1>Mantenimiento de Equipos</h1>
<br />
<form>

    @* Inicio de formulario *@

    <div class="form-group row mb-4">
        <div class="col-sm-2">
            <label>Nombre del libro</label>
        </div>
        <div class="col-sm-4">
            @Html.TextBox("nombre", "", new { @class = "form-control" })
        </div>
        <div class="col-sm-2">
            <label>Autor</label>
        </div>
        <div class="col-sm-4">
            @Html.DropDownList("autor", ViewBag.Autores as List<SelectListItem>, "Seleccione un autor", new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row mb-4">
        <div class="col-sm-2">
            <label>Categoría o Género</label>
        </div>
        <div class="col-sm-4">
            @Html.DropDownList("categoria", ViewBag.Categorias as List<SelectListItem>, "Seleccione una categoría o género", new { @class = "form-control" })
        </div>
        <div class="col-sm-2">
            <label>Precio</label>
        </div>
        <div class="col-sm-4">
            @Html.TextBox("precio", "", new { @class = "form-control", @placeholder = "Ingrese el precio" })
        </div>
    </div>

    <div class="form-group row mb-4">
        <div class="col-sm-2">
            <label>Descripción</label>
        </div>
        <div class="col-sm-10">
            @Html.TextArea("descripcion", "", new { @class = "form-control", @placeholder = "Ingrese la descripción" })
        </div>
    </div>

    @* Fin de formulario *@

</form>
